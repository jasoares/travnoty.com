%header#header
  %nav.navbar.navbar-default{ role: 'navigation' }
    .container
      .navbar-header
        %button.navbar-toggle{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#server-info-navbar-collapse' }
          %span.sr-only Toggle Navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to(root_url, :class => 'navbar-brand') do
          = image_tag('travnoty_logo_2_black.png', size: '128x20')
      #server-info-navbar-collapse.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li{ :class => current_page?(servers_path) ? 'active' : '' }= link_to 'Server Info', servers_path
          %li{ :class => current_page?(scheduled_servers_path) ? 'active' : '' }= link_to 'New Servers', scheduled_servers_path
          %li{ :class => current_page?(recently_started_servers_path) ? 'active' : '' }= link_to 'Recent Servers', recently_started_servers_path
        %ul.nav.navbar-nav.navbar-right
          - if signed_in?
            %li.dropdown
              %a.dropdown-toggle{ 'data-toggle' => 'dropdown', href: '#' }
                %span.glyphicon.glyphicon-user
                &nbsp;
                = current_user.handle
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Account Settings", account_path
                %li= link_to "Notifications", account_notifications_path
                %li= link_to "Accounts", travian_accounts_path
                %li.divider
                %li= link_to "Sign out", sign_out_path
          - else
            %li= link_to "Sign in", sign_in_path