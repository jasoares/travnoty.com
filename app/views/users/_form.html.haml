= form_for @user do |f|
  = @user.errors.full_messages unless @user.errors.empty?
  .control-group
    = f.label :name, 'Full Name'
    = f.text_field :name, :class => 'control'
    - unless @user.errors[:name].empty?
      %p.error= @user.errors.messages[:name]
  .control-group
    = f.label :email
    = f.text_field :email, :class => 'control', :type => 'email'
    - unless @user.errors[:emails].empty?
      %p.error= @user.errors.messages[:emails][1]
  .control-group
    = f.label :password
    = f.password_field :password, :class => 'control'
    - unless @user.errors[:password].empty?
      %p.error= @user.errors.messages[:password].first
    %p Tip: Must have at least 8 characters.
  .control-group
    = submit_tag 'Sign up', :class => 'button primary'
